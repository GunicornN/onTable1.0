# =============================================================================
# OnTable - Environment Variables Template
# =============================================================================
# Copy this file to .env.dev (or .env.prod) and fill in your own values.
# NEVER commit real secrets to version control.
# =============================================================================

# Django core settings
DEBUG=1
SECRET_KEY=your-secret-key-here

# Space-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 0.0.0.0 [::1]

# ------------------------------------------------------------------------------
# PostgreSQL / PostGIS database settings
# ------------------------------------------------------------------------------
SQL_ENGINE=django.contrib.gis.db.backends.postgis
SQL_DATABASE=onTable
SQL_USER=user
SQL_PASSWORD=your-db-password-here
SQL_HOST=db
SQL_PORT=5432

# Used by the PostgreSQL Docker container
POSTGRES_DB=onTable
POSTGRES_USER=user
POSTGRES_PASSWORD=your-db-password-here

# ------------------------------------------------------------------------------
# Application URLs
# ------------------------------------------------------------------------------
FRONTEND_ADDRESS=http://localhost:8080/
BACKEND_ADDRESS=http://127.0.0.1:8000

# ------------------------------------------------------------------------------
# Google reCAPTCHA (https://www.google.com/recaptcha/admin)
# ------------------------------------------------------------------------------
# RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
# RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# ------------------------------------------------------------------------------
# Google Maps API (https://console.cloud.google.com/)
# ------------------------------------------------------------------------------
# GOOGLE_MAP_API_KEY=your-google-maps-api-key

# ------------------------------------------------------------------------------
# Facebook OAuth (https://developers.facebook.com/)
# ------------------------------------------------------------------------------
# SOCIAL_AUTH_FACEBOOK_KEY=your-facebook-app-id
# SOCIAL_AUTH_FACEBOOK_SECRET=your-facebook-app-secret

# ------------------------------------------------------------------------------
# Email / Contact
# ------------------------------------------------------------------------------
# SERVER_EMAIL=contact@example.com
